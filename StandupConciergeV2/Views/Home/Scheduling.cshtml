@model StandUpConceirge.Models.ScheduleViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <body>
        <div class="tab">
            <button class="tablinks" onclick="tab(event, 'Scheduling')" id="defaultOpen">Scheduling<i class="fas fa-chevron-right" style="padding-left:30px;"></i> </button>
            <button class="tablinks" onclick="tab(event, 'RR')">Respondents & Requests<i class="fas fa-chevron-right" style="padding-left:30px;"></i></button>
            <button class="tablinks" onclick="tab(event, 'RD')">Results Delivery</button>
        </div>
        <form asp-action="Create">
            <div id="Scheduling" class="tabcontent">
                <br>
                <h4>Start Day <span style="float:right;"><i class="far fa-calendar-alt"></i></span></h4>
                <div class="wrapper">
                    <div class="row">
                        <div class="col-3">
                            @*<input id="datepicker" />*@
                            <div class="form-group">
                                <input asp-for="StartDay" type="text" id="datepicker" />
                                <span asp-validation-for="StartDay" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-9">
                        </div>
                    </div>
                </div>

                <br />
                <hr />

                <h4>Schedule <span style="float:right;"><i class="far fa-clock"></i></span></h4>

                <div class="wrapper">
                    <div class="row">
                        <div class="col-12">
                            <div class="row">
                                <div class="col-3">
                                    @*<input id="timepicker" />*@
                                    <div class="form-group">
                                        <input asp-for="TimeOccur" type="text" id="timepicker" />
                                        <span asp-validation-for="TimeOccur" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-7">
                                    <div class="form-group">
                                        <div class="form-group form-check form-check-inline" style="padding-left:10px;">
                                            <label class="form-check-label">
                                                <input class="form-check-input" asp-for="Sunday" /> Sun
                                            </label>
                                        </div>
                                        <div class="form-group form-check form-check-inline" style="padding-left:10px;">
                                            <label class="form-check-label">
                                                <input class="form-check-input" asp-for="Monday" /> Mon
                                            </label>
                                        </div>
                                        <div class="form-group form-check form-check-inline" style="padding-left:10px;">
                                            <label class="form-check-label">
                                                <input class="form-check-input" asp-for="Tuesday" /> Tue
                                            </label>
                                        </div>
                                        <div class="form-group form-check form-check-inline" style="padding-left:10px;">
                                            <label class="form-check-label">
                                                <input class="form-check-input" asp-for="Wednesday" /> Wed
                                            </label>
                                        </div>
                                        <div class="form-group form-check form-check-inline" style="padding-left:10px;">
                                            <label class="form-check-label">
                                                <input class="form-check-input" asp-for="Thursday" /> Thu
                                            </label>
                                        </div>
                                        <div class="form-group form-check form-check-inline" style="padding-left:10px;">
                                            <label class="form-check-label">
                                                <input class="form-check-input" asp-for="Friday" /> Fri
                                            </label>
                                        </div>
                                        <div class="form-group form-check form-check-inline">
                                            <label class="form-check-label">
                                                <input class="form-check-input" asp-for="Saturday" /> Sat
                                            </label>
                                        </div>
                                    </div>
                                </div>


                                <div class="col-2">
                                    <select asp-for="FrequencyOccur" class="form-control">
                                        <option value="Weekly">Every Week</option>
                                        <option value="Monthly">Every Month</option>
                                        <option value="Yearly">Every Year</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <hr />

            </div>



            <br />
            <div id="RR" class="tabcontent">
                <h4>Respondents  <span style="float:right;"><i class="fas fa-user-friends"></i></span></h4>
                <div class="wrapper">
                    <div class="form-group form-inline">
                        @*<input asp-for="Respondents" class="form-control" />
                        <button type="button"  class="btn btn-outline-secondary" style="border:none" return false;><i class="fas fa-plus-circle"></i></button>
                        <span asp-validation-for="Respondents" class="text-danger"></span>*@

                        <select asp-for="Respondents" id="mselect" multiple="" class="form-control" asp-items="@ViewBag.respondentsList">
                            @*<option value="Weekly">Every Week</option>
                            <option value="Monthly">Every Month</option>*@
                        </select>
                    </div>

                <hr />

                <h4>Welcome Message <span style="float:right;"><i class="fas fa-comments"></i></span></h4>
                <div class="wrapper">
                    <div class="form-group">
                        <textarea asp-for="WelcomeMsg" class="form-control"></textarea>
                        <span asp-validation-for="WelcomeMsg" class="text-danger"></span>
                    </div>
                </div>
                <hr />

                <h4>Questions<span style="float:right;"><i class="fas fa-question"></i></span></h4>

                <div class="questions">
                    <div class="QuestionWrapper">
                        <div class="form-group">
                            <span asp-validation-for="Question" class="text-danger"></span>
                            <textarea asp-for="Question" class="form-control"></textarea>
                        </div>
                    </div>
                </div>
                <br />
                <button type="button" class="btn btn-outline-secondary add_question">Add Questions</button>
                </div>

                <div id="RD" class="tabcontent">

                </div>

                <div class="text-right">
                    <button type="submit" value="Create" class="btn btn-outline-secondary" style="position:sticky">Proceed</button>
                </div>
            </div>
        </form>

        <script>
            $(function(){
                $("#mselect")
                    .chosen({width:'50%'});
            });
        </script>

        <script>
            document.getElementById("defaultOpen").click();
            function tab(evt, tabName) {
                var i, tabcontent, tablinks;
                tabcontent = document.getElementsByClassName("tabcontent");
                for (i = 0; i < tabcontent.length; i++) {
                    tabcontent[i].style.display = "none";
                }
                tablinks = document.getElementsByClassName("tablinks");
                for (i = 0; i < tablinks.length; i++) {
                    tablinks[i].className = tablinks[i].className.replace(" active", "");
                }
                document.getElementById(tabName).style.display = "block";
                evt.currentTarget.className += " active";
            }
        </script>

        <script>

            $('#datepicker').datepicker();
            $('#timepicker').timepicker();
        </script>

        @*<script type="text/javascript">
            $(function () {
                $('#datetimepicker3').datetimepicker({
                    format: 'LT'
                });
            });
        </script>*@

        <script>
            $(document).ready(function () {
                $('.add_question').on('click', function () {
                    $('.questions').append('<div style="margin-top:10px;" class="QuestionWrapper"><div class="form-group"><span asp-validation-for= "Question" class= "text-danger" ></span ><textarea id="Question" name="Question" class="form-control"></textarea></div >')
                });
            });
        </script>
      

    </body>
